{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "verbatimModuleSyntax": false,
    "noImplicitAny": false,
    "strict": false,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "types": ["ant-design-vue/typings/global", "vite-plugin-pwa/client"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@core/*": ["./src/core/*"],
      "@components/*": ["./src/components/*"],
      "@types/*": ["./src/types/*"],
      "@views/*": ["./src/views/*"],
      "@modules/*": ["./src/modules/*"],
      "@designer/*": ["./src/modules/designer/*"],
      "@manager/*": ["./src/modules/manager/*"],
      "@mobile/*": ["./src/modules/mobile/*"],
      "@assets/*": ["./src/core/assets/*"],
      "@utils/*": ["./src/core/utils/*"],
      "@stores/*": ["./src/core/stores/*"],
      "@api/*": ["./src/core/api/*"],
      "@auth/*": ["./src/core/auth/*"],
      "@engines/*": ["./src/core/engines/*"],
      "@layout/*": ["./src/core/layout/*"],
      "@renderer/*": ["./src/core/renderer/*"],
      "@validation/*": ["./src/core/validation/*"]
    }
  }
}
